{
    "monitors": {
        "primary": 1,
        "secondary": 2
    },
    "audio": {
        "device1": "TV",
        "device2": "Speakers"
    },
    "paths": {
        "monitorLog": ".\\SwapMonitorsLog.txt",
        "audioLog": ".\\SwapAudioLog.txt"
    },
    "notifications": {
        "enabled": true,
        "monitorMessage": "Switched display to monitor {0}",
        "audioMessage": "Switched audio device to {0}"
    },
    "windowCustomizations": {
        "enabled": true,
        "rules": [
            {
                "findMethod": "Process",
                "findValue": "Discord.exe",
                "monitor": 3
            },
            {
                "findMethod": "Title",
                "findValue": "WhatsApp",
                "monitor": 4,
                "command": "if ($customization.findValue -eq 'WhatsApp') { Write-Host 'Custom command for WhatsApp'  }"
            }
        ]
    }
}